---
// src/layouts/BaseLayout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Analytics from "../components/Analytics.astro";
// src/components/BaseHead.astro
import { SITE_TITLE, SITE_DESCRIPTION, SITE_FAVICON } from "../consts";
import faviconUrl from "../assets/favicon.svg"; // ← 生パスではなくimport！

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;

import { IS_PROD } from "../consts";
//console.log("[SRV] SITE_FAVICON:", SITE_FAVICON);
---

<html lang="ja">
  <head>
    <Analytics />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={SITE_FAVICON} type="image/svg+xml" />
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <!-- Google Tag Manager (noscript) -->
    {
      IS_PROD && (
        <noscript>
          <iframe
            src="https://www.googletagmanager.com/ns.html?id=GTM-XXXXXXX"
            height="0"
            width="0"
            style="display:none;visibility:hidden"
          />
        </noscript>
      )
    }
    <!-- End Google Tag Manager (noscript) -->
    <Header />
    <main class="mx-auto max-w-screen-md px-4 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
