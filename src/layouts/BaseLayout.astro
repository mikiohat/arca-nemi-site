import Header from "@common/Header.astro";
import Footer from "@common/Footer.astro";
import Analytics from "@common/Analytics.astro";

// „Çµ„Ç§„Éà„ÅÆ„É°„ÇøÊÉÖÂ†±
import { SITE_TITLE, SITE_DESCRIPTION, SITE_FAVICON, GTM_ID } from "@/consts";

// „Ç∞„É≠„Éº„Éê„É´„Çπ„Çø„Ç§„É´ÔºàConstanceÈ¢®„ÉÜ„Éº„ÉûÔºâ
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<html lang="ja">
  <head>
    <Analytics />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={SITE_FAVICON} type="image/svg+xml" />
    <!-- üî§ Kurale Ë™≠„ÅøËæº„ÅøÔºàË¶ãÂá∫„ÅóÁî® serif „Éï„Ç©„É≥„ÉàÔºâ -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kurale&display=swap"
      rel="stylesheet"
    />
  </head>

  <!-- ‚òÖ Tailwind Áî®„ÅÆ bg-white/text-gray-900 „ÅØÂâäÈô§ -->
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src={"https://www.googletagmanager.com/ns.html?id=" + GTM_ID}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      >
      </iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <Header />

    <!-- ‚òÖ Constance È¢®„ÅÆÂÖ±ÈÄö„Ç≥„É≥„ÉÜ„Éä -->
    <main class="fp-main">
      <slot />
    </main>

    <Footer />

    <!-- ‚òÖ Âè≥‰∏ã runnerÔºàÈÄ≤Êçó„Éê„ÉºÔºâ -->
    <div id="runner" class="fp-runner">
      <div class="fp-runner-body">
        <span class="fp-runner-label">progress</span>
        <div class="fp-runner-bar">
          <div class="fp-runner-progress"></div>
        </div>
      </div>
    </div>

    <!-- ‚òÖ fade-in „Å® runner Áî®„ÅÆËªΩÈáè„Çπ„ÇØ„É™„Éó„Éà -->
    <script is:inline>
      if (typeof window !== "undefined") {
        const fadeEls = document.querySelectorAll(".js-fade");
        const runner = document.getElementById("runner");
        let runnerProgress = null;

        if (runner) {
          runnerProgress = runner.querySelector(".fp-runner-progress");
        }

        // „Çª„ÇØ„Ç∑„Éß„É≥„ÅÆ„Åµ„Çè„Å£„Å®Ë°®Á§∫
        const io = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("is-visible");
                io.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15 },
        );

        fadeEls.forEach((el) => io.observe(el));

        // runner „ÅÆ„Çπ„ÇØ„É≠„Éº„É´ÈÄ£ÂãïÔºàrequestAnimationFrame „ÅßÂÑ™„Åó„ÅèÔºâ
        let ticking = false;

        const updateRunnerCore = () => {
          if (!runner || !runnerProgress) {
            ticking = false;
            return;
          }

          const scrollTop = window.scrollY;
          const doc = document.documentElement;
          const scrollHeight = doc.scrollHeight - window.innerHeight;
          const ratio = scrollHeight > 0 ? scrollTop / scrollHeight : 0;

          const maxTranslate = 40; // px
          const tx = ratio * maxTranslate;
          runner.style.transform = "translateX(" + tx + "px)";

          const clamped = Math.max(0.05, Math.min(1, ratio));
          runnerProgress.style.transform = "scaleX(" + clamped + ")";

          ticking = false;
        };

        const onScroll = () => {
          if (!ticking) {
            ticking = true;
            window.requestAnimationFrame(updateRunnerCore);
          }
        };

        window.addEventListener("scroll", onScroll);
        window.addEventListener("resize", onScroll);
        onScroll();
      }
    </script>
  </body>
</html>
