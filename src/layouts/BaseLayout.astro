---
// src/layouts/BaseLayout.astro
import Header from "@common/Header.astro";
import Footer from "@common/Footer.astro";
import Analytics from "@common/Analytics.astro";
// src/components/BaseHead.astro
import { SITE_TITLE, SITE_DESCRIPTION, SITE_FAVICON, GTM_ID } from "@/consts";

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;

//console.log("[SRV] SITE_FAVICON:", SITE_FAVICON);
---

<html lang="ja">
  <head>
    <Analytics />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={SITE_FAVICON} type="image/svg+xml" />
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src={"https://www.googletagmanager.com/ns.html?id=" + GTM_ID}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      >
      </iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Header />
    <main class="mx-auto max-w-screen-md px-4 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
