//tsconfig.json

{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",          // ルートを基準にする
    "paths": {
      "@/*": ["src/*"],      // "@/..." → "src/..." に解決
      "@common/*": ["src/components/common/*"],
      "@playground/*": ["src/components/playground/*"],
      "@talk/*": ["src/components/talk/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": [".astro/types.d.ts", "src/**/*"],
  "exclude": ["dist"]
}
